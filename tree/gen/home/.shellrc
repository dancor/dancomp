PATH="$PATH":~/p/em/emsdk:~/p/em/emsdk/fastcomp/emscripten
PATH="$PATH":~/p/em/emsdk/node/12.9.1_64bit/bin
export PATH

export CUDA_PATH=/usr

export DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus

# Is this for CUDA?
