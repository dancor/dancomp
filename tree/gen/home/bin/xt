#!/bin/sh
BG_COLOR='white'
if [ "x$1" = "x--alternate" ]
then
    BG_COLOR='gray95'
    shift
fi
# Use pixelsize=24 for 2160p
TMUX='' exec urxvt +sb -fg black -bg "$BG_COLOR" \
  -b 0 -w 0 -fn \
  'xft:Monospace:pixelsize=14' \
  "$@" &
