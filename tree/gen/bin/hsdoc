#!/bin/zsh

if [[ "$1" == "" ]]
then
  exec ff /usr/share/doc/ghc-doc/html/index.html
fi

if [[ "$1" == "cab" ]]
then
  if [[ "$2" == "" ]]
  then
    exec ff ~/.cabal/share/doc/index.html
  fi
  exec ff $(ls ~/.cabal/share/doc/"$2"-*/html/index.html | tail -n 1)
fi

exec ff /usr/share/doc/libghc-"$1"-doc/html/index.html
