#!/bin/sh

sudo mkdir -p /mnt/w/Media
sudo mount -t smbfs //192.168.1.200/Media /mnt/w/Media
sudo mkdir -p /mnt/w/Movies
sudo mount -t smbfs //192.168.1.200/Movies /mnt/w/Movies
sudo mkdir -p /mnt/w/TV
sudo mount -t smbfs //192.168.1.200/TV /mnt/w/TV
sudo mkdir -p /mnt/w/Unsorted
sudo mount -t smbfs //192.168.1.200/Unsorted /mnt/w/Unsorted

mount -t /mnt/w/Major/Movies
mount -t /mnt/w/Major/TV
mount -t /mnt/w/Major/Applications
mount -t /mnt/w/Major/Games
mount -t /mnt/w/Major/Music

