#!/usr/bin/env python3

from optparse import OptionParser
import cmd_util as cu
import sys
import time

def scr_info(n):
    if False and n == 2:
        scr_title = "NOTIFIEROMG"
        scr_tmux = n + 11
    else:
        scr_title = "a" + str(n + 1)
        scr_tmux = n + 1
    return (scr_title, str(n), str(scr_tmux))

# duplicates wmv stuff?
#scrs = [scr_info(n) for n in range(3)]
scrs = [scr_info(n) for n in range(2)]

usage = "usage: scrs [options] -- [extra-agrs-to-xm]"
opt_p = OptionParser(usage)
opt_p.add_option("-v", "--verbose", action="store_true", help="show commands")
(opts, args) = opt_p.parse_args()

for title, pos, tmux in scrs:
    cmd = " ".join(["xm", title, pos, tmux] + list(cu.args_esc(args))) + " >> /home/danl/log/xm_wtf 2>&1 &"
    if opts.verbose:
        print(cmd)
    cu.cmd_wait(cmd)
    time.sleep(0.2)
