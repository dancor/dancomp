#!/usr/bin/env python3
# start an xt at a given location (a1,a2,etc see wmv_lib)

import cmd_util as cu
import sys
import wmv_lib as wmv

args = sys.argv[1:]
pos = args[0]

x, y, w, h = wmv.rect_chars(pos)
cmd = ['xt', '-geometry', '%dx%d+%d+%d' % (w, h, x, y)] + args[1:]
cu.cmd_wait(' '.join(cu.args_esc(cmd)) + ' &')
